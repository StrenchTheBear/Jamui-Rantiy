@model IEnumerable<Jamui_Rantiy.Models.User>

<h2>Lista De Contactos</h2>

<div  class="container mt-3" style="background-color: #D5A9A9!important;">
    <a style="color:white" asp-action="Create">Create</a>
</div>

<div  class="container mt-3" style="background-color: #D5A9A9!important;">
<table class="table table-dark">
    <thead class="thead-dark">
        <tr>
                <th scope="col">
                    #
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
        </tr>
    </thead>

    <tbody>

    @foreach (var item in Model)
    {
        <tr>
            <th scope="row">
                <a style="color:white" asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a style="color:white" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
        </tr>
    }        
    </tbody>    
</table>
</div>